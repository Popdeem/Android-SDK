<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pd_login_info_image"
                    android:layout_width="wrap_content"
                    android:layout_height="420dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/pd_social_login_image_1" />



            </android.support.constraint.ConstraintLayout>


        <TextView
            android:id="@+id/pd_social_rewards_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/pd_sociallogin_title"
            android:textColor="#13673D"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/pd_social_rewards_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/pd_sociallogin_body"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"/>



        <LinearLayout
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/social_login_padding"
            >
            <RelativeLayout
                android:id="@+id/pd_login_reward_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pd_reward_list_background_color"
                android:minHeight="90dp"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/pd_reward_star_image_view"
                    android:layout_width="@dimen/pd_reward_item_image_dimen"
                    android:layout_height="@dimen/pd_reward_item_image_dimen"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/pd_ui_star_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/pd_reward_star_image_view"
                    android:layout_toRightOf="@id/pd_reward_star_image_view"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    >

                    <TextView
                        android:id="@+id/pd_reward_offer_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/pd_login_tagline_text_color"
                        android:textSize="@dimen/pd_login_button_text_size"
                        tools:text="Reward Title"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pd_reward_item_rules_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/pd_login_body_text_color"
                        android:textSize="@dimen/social_login_body_text_size"
                        tools:text="Reward Rules" />

                    <TextView
                        android:id="@+id/pd_reward_request_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:maxLines="2"
                        android:textColor="@color/pd_accent"
                        android:textSize="12sp"
                        tools:text="3 Days Remaining"
                        android:textStyle="bold"/>

                </LinearLayout>

            </RelativeLayout>


            <FrameLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:minHeight="@dimen/pd_login_button_height"
                    android:elevation="32dp"
                    android:id="@+id/pd_facebook_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pd_rounded_facebook_v2"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:text="@string/pd_log_in_with_facebook_text"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pd_login_button_text_size"
                    android:visibility="visible" />

                <!--<ProgressBar-->
                <!--android:id="@+id/pd_progress_bar"-->
                <!--style="?android:attr/progressBarStyleHorizontal"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="15dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:indeterminate="true"-->
                <!--android:progressDrawable="@drawable/pd_progress_drawable"-->
                <!--android:visibility="gone" />-->

            </FrameLayout>

            <!--<FrameLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginBottom="10dp">-->

            <Button
                android:elevation="32dp"
                android:minHeight="@dimen/pd_login_button_height"

                android:id="@+id/pd_twitter_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pd_rounded_twitter_v2"
                android:paddingEnd="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingStart="15dp"
                android:text="@string/pd_log_in_with_twitter_text"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/pd_login_button_text_size"
                android:layout_marginBottom="10dp"
                android:visibility="visible" />

            <!--</FrameLayout>-->

            <FrameLayout
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/pd_social_continue_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/pd_login_continue_button_background_color"
                    android:text="@string/pd_social_login_continue_text"
                    android:textColor="@color/pd_login_continue_button_text_color"
                    android:visibility="gone" />

                <!--android:background="@drawable/pd_insta_button"-->
                <Button
                    android:elevation="32dp"
                    android:minHeight="@dimen/pd_login_button_height"

                    android:id="@+id/pd_instagram_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pd_rounded_instagram_v2"
                    android:paddingEnd="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingStart="15dp"
                    android:text="@string/pd_log_in_with_instagram_text"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/pd_login_button_text_size"
                    android:visibility="visible" />

            </FrameLayout>
            <Button
                android:layout_gravity="center"
                android:id="@+id/pd_social_login_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@color/clear"
                android:text="@string/pd_connect_skip"
                android:textSize="@dimen/pd_login_button_text_size"
                android:padding="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pd_progress_layout"
        android:background="@color/pd_dialog_bg_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <ProgressBar
            android:id="@+id/pd_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:progressDrawable="@drawable/pd_progress_drawable"
            android:visibility="visible" />
        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Logging in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:text="Please Wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>
</RelativeLayout>