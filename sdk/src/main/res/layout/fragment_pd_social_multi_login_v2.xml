<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    ​
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:orientation="vertical">
        ​
        <ImageView
            android:id="@+id/pd_social_login_header_image_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pd_social_login_image_1"
            android:paddingTop="30dp"
            />
        ​
        ​
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            ​
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                ​
                ​
                ​
                ​
                ​
                ​
                ​
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:paddingHorizontal="15dp">
                    ​
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">
                        ​
                        <TextView
                            android:id="@+id/pd_social_rewards_title_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/pd_sociallogin_title"
                            android:textAllCaps="true"
                            android:textColor="#13673D"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        ​
                        <TextView
                            android:id="@+id/pd_social_rewards_info_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="20dp"
                            android:text="@string/pd_sociallogin_body"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:textColor="@android:color/black"
                            android:alpha="0.7"/>
                        ​
                        ​
                    </LinearLayout>
                    ​
                    <RelativeLayout
                        android:id="@+id/pd_login_reward_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/pd_reward_list_background_color"
                        android:minHeight="40dp"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:visibility="gone">
                        ​
                        <ImageView
                            android:id="@+id/pd_reward_star_image_view"
                            android:layout_width="@dimen/pd_reward_item_image_dimen"
                            android:layout_height="@dimen/pd_reward_item_image_dimen"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:adjustViewBounds="true"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pd_ui_star_icon"
                            android:visibility="gone" />
                        ​
                    </RelativeLayout>
                    ​
                    <Button
                        android:id="@+id/pd_facebook_login_button"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/pd_rounded_facebook_v2"
                        android:elevation="32dp"
                        android:minHeight="@dimen/pd_login_button_height"
                        android:paddingStart="15dp"
                        android:paddingLeft="15dp"
                        android:paddingEnd="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/pd_log_in_with_facebook_text"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/pd_login_button_text_size"
                        android:visibility="visible" />
                    ​
                    ​
                    <Button
                        android:id="@+id/pd_twitter_login_button"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/pd_rounded_twitter_v2"
                        android:elevation="32dp"
                        android:minHeight="@dimen/pd_login_button_height"
                        android:paddingStart="15dp"
                        android:paddingLeft="15dp"
                        android:paddingEnd="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/pd_log_in_with_twitter_text"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/pd_login_button_text_size"
                        android:visibility="visible" />
                    ​
                    <Button
                        android:id="@+id/pd_instagram_login_button"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/pd_rounded_instagram_v2"
                        android:elevation="32dp"
                        android:minHeight="@dimen/pd_login_button_height"
                        android:paddingStart="15dp"
                        android:paddingLeft="15dp"
                        android:paddingEnd="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/pd_log_in_with_instagram_text"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/pd_login_button_text_size"
                        android:visibility="visible" />
                    ​
                    <Button
                        android:id="@+id/pd_social_login_back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:adjustViewBounds="true"
                        android:background="@color/clear"
                        android:padding="2dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@android:color/black"
                        android:text="@string/pd_connect_skip"
                        android:textSize="@dimen/pd_login_button_text_size" />
                    ​
                    ​
                    ​
                </LinearLayout>
                ​
                ​
                ​
                ​
                ​
                ​
            </RelativeLayout>
        </LinearLayout>
        ​
        ​
    </LinearLayout>
    ​
    ​
    ​
    ​
    <LinearLayout
        android:id="@+id/pd_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pd_dialog_bg_bg"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">
        ​
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        ​
        <ProgressBar
            android:id="@+id/pd_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:progressDrawable="@drawable/pd_progress_drawable"
            android:visibility="visible" />
        ​
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logging in"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        ​
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Wait"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        ​
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
    ​
    ​
    ​
    ​
    ​
    ​
    ​
    ​
    ​
    ​
    ​
</FrameLayout>